    {% form_theme formComment 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}
    {% if app.user %}
<h2>Poster un commentaire</h2>
{{ form_start(formComment) }}

    {#{{ form_error(formArticle.title) }} Pour styler les erreurs, ds div #}
    {{ form_row(formComment.author, {'attr': {'placeholder': 'Votre nom'}}) }}
    {{ form_row(formComment.content, {'attr': {'placeholder': "Votre commentaire"}}) }}

     {#inspecter et copier structure champs pour aligner bouton #}
<div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <button type="submit" class="btn btn-success">
            Poster le commentaire
        </button>
    </div>
</div>
{{ form_end(formComment) }}
{% else %}
    <h2>Vous ne pouvez pas commenter si vous n'êtes pas connecté.</h2>
    <a href="{{ path('security_login') }}" class="btn btn-primary">
        Connexion
    </a>
        {# todo Une fois connecté à partir d'un article,
        faire que l'on revienne sur le même - Customize redirect after form login#}
    {% endif %}
{% endblock %}
